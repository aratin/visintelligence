extends ../layouts/default
block content
    section
      #inner-banner
      #inner-content-box
        #content-box
          .container
            #offerings
              include ../views/icon.jade
              .col-md-9#content-data
                .row
                  .col-md-4
                    if data.allnewess.length
                        if data.allnewess[0].image1.exists
                          img(id="image",src=data.allnewess[0].image1.url)
                  .col-md-8
                  a.news-row(href="/news1")
                    h3 News1:-
                  small #{data.allnewess[0].date1}
                    p
                      | #{data.allnewess[0].news1}
                 .row
                  .col-md-4
                   if data.allnewess.length
                        if data.allnewess[0].image2.exists
                          img(id="image1",src=data.allnewess[0].image2.url)
                  .col-md-8
                  a.news-row(href="/news2")
                    h3 News2:-
                  small #{data.allnewess[0].date2}
                    p
                      | #{data.allnewess[0].news2}

                 .row
                  .col-md-4
                    if data.allnewess.length
                        if data.allnewess[0].image3.exists
                          img(id="image2",src=data.allnewess[0].image3.url)
                  .col-md-8
                  a.news-row(href="/news3")
                    h3 News3:-
                  small #{data.allnewess[0].date3}
                    p
                      | #{data.allnewess[0].news3}
                 .row
                  .col-md-4
                    if data.allnewess.length
                        if data.allnewess[0].image4.exists
                          img(id="image3",src=data.allnewess[0].image4.url)
                  .col-md-8
