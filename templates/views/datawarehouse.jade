extends ../layouts/default
block content
    section
      #inner-banner
      #inner-content-box
        #content-box
          .container
            #offerings
              include ../views/icon.jade
              .col-md-9#content-data
                h2 #{data.datawarehouses[0].heading}
                .row
                  .col-md-4
                    if data.datawarehouses.length
                        if data.datawarehouses[0].image.exists
                          img(id="image",src=data.datawarehouses[0].image.url)
                  .col-md-8
                    p
                      | #{data.datawarehouses[0].text}
                    p
                      | #{data.datawarehouses[0].subText}
                    p
                      | #{data.datawarehouses[0].shortText}
                    p
                      | #{data.datawarehouses[0].shortString}
              .expand
              include ../views/listingmenu
   